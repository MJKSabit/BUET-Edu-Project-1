<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#66BB6A</item>
    </style>

    <style name="HeaderText" >
        <item name="android:textSize">@dimen/heading_text</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ContentText" >
        <item name="android:textSize">@dimen/content_text</item>
        <item name="android:paddingLeft">@dimen/content_padding</item>
        <item name="android:textColor">@color/content_color</item>
    </style>

</resources>